<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <h2 class="pb-2 border-bottom"><%= character.name %></h2>
    <div class="col-6">
      
      <div class="mt-3">
      <img class="img-fluid" src="<%= character.image%>" />
      <div class="row justify-content-between">
        
        

        <%if(character.user == user.id){ %>
        <form
          action="/characters/deleteCharacter/<%= character.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
  </div>
    

    <div class="col-3 mt-5">
      <h5 class=>Nationality</h5>
      <p><%= character.nationality %></p>

      <h5 class="mt-4">Likes</h5>
        <p><%= character.likes %></p>
    </div>

    <div class="col-3 mt-5">
      <h5>Gender</h5>
        <p><%= character.gender %></p>
    </div>

    



  </div>
</div>

<%- include('partials/footer') -%>
