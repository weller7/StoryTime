<%- include('partials/header') -%>

<script src="https://cdn.ckeditor.com/4.19.1/standard/ckeditor.js"></script>


<div class="container">
    <div class="col text-center">

        <h2 class="pb-3 border-bottom">Edit your story</h2>

        <h3 class="mt-4"><%= story.title %></h3>

        <!-- Form to make a post request to /stories -->
        <div class="row mt-5">

                <form class="form-group" action="/stories/submitEditedStory/<%= story._id%>?_method=PUT" method="POST" class="col s12">

                <div class="row">
                    <div class="input-field">

                        <!-- {{!-- title, name and id --}} -->
                        <h5><label for="title">Title</label></h5>
                        <input class="form-control" type="text" id="title" name="title" value="<%= story.title %>">
                        
                    </div>
                </div>


        <!-- Select field --}}
                <div class="row">
                    <div class="input-field">
                        <select id="status" name="status">
                            <option value="public" selected>Public</option>
                            <option value="private">Private</option>
                        </select>
                        <label for="status">Status</label>
                    </div>
                </div> -->

        <!--  body with text area that will be editor -->
                <div class="row mt-5">
                    <div class="input-field">
                        <h5>Edit your story</h5>
                        <textarea id="body" name="body"><%= story.body %></textarea>
                    </div>
                </div>


        <!-- {{!-- Save button and cancel that goes to the dashboard --}} -->
                <div class="row justify-content-center mt-5">
                    <input type="submit" value="Save" class="btn btn-primary">
                    <a href="/stories" class="btn btn-alert">Cancel</a>
                </div>
            </form>
        </div>



    </div>
</div>

<script>
    CKEDITOR.replace('body');
</script>

