<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">

        <h2 class="pb-2 border-bottom">Add a character</h2>
         
          <div class="mt-5">
            
            <form action="/characters/createCharacter" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Name</label>
                  <input type="text" class="form-control" id="name" name="name">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Nationality</label>
                <textarea class="form-control" id="nationality" name="nationality"></textarea>
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Gender</label>
                <textarea class="form-control" id="gender" name="gender"></textarea>
              </div>
            
                <div class="mb-3">
                  <label for="caption" class="form-label">Likes</label>
                  <textarea class="form-control" id="likes" name="likes"></textarea>
                </div>

                <div class="mb-3">

                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>

          <div class="mt-5">
            <p><strong>User Name</strong>: <%= user.userName %></p>
            <p><strong>Email</strong>: <%= user.email %></p>
            <a href="/logout" class="col-3 btn btn-primary">Logout</a>
        </div>
      </div>
      
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<characters.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <h5><%= characters[i].name%> %></h5>
            <a href="/characters/<%= characters[i]._id%>">
              <img class="img-fluid" src="<%= characters[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>