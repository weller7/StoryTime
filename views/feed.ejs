<%- include('partials/header') -%>
  <div class="container">
    <div class="row justify-content-center mt-5">

      <h2 class="pb-2 border-bottom">Read stories from other users in our feed.</h2>


      <ul class="row list-unstyled">
        <% for(var i=0; i<stories.length; i++) {%>



          <li class="col-6 justify-content-between mt-5">
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title"><a  class="link" href="/stories/<%= stories[i]._id%>"> 
                <%= stories[i].title %> </a></h5>
                <h6 class="card-subtitle mb-2 text-muted">By <%=stories[i].user.userName%></h6>
                
              </div>
            </div>

          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>


